{
  "manifest_version": 3,
  "name": "Allowance",
  "version": "0.0.1",
  "permissions": ["storage", "scripting", "contextMenus", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "./background.js",
    "type": "module"
  },
  "web_accessible_resources": [{
    "matches": ["<all_urls>"],
    "resources": ["./content_script.js"]
  }]
}